<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<GridPane
    fx:id="main_menu_grid"
    fx:controller="sample.Controller"
    xmlns:fx="http://javafx.com/fxml"
    alignment="CENTER"
    hgap="10"
    vgap="10">

    <Button
        fx:id="new_game_button"
        text="Új játék"
        GridPane.rowIndex="0" />
    <Button
        text="Statisztikák és Ranglétra"
        GridPane.rowIndex="1" />
    <Button
        text="Beállítások"
        GridPane.rowIndex="2" />
    <Button
        fx:id="exit_button"
        text="Kilépés"
        GridPane.rowIndex="3" />


</GridPane>